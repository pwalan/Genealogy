<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.pwalan.androidtest.UserAcitvity">

    <TextView
        android:id="@+id/blank0"
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:text="欢迎"/>

    <com.github.pwalan.genealogy.myview.RoundImageView
        android:id="@+id/img_head"
        android:layout_below="@id/blank0"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/user"/>

    <EditText
        android:id="@+id/et_passwd"
        android:layout_centerInParent="true"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:hint="密码"/>

    <TextView
        android:id="@+id/blank1"
        android:layout_below="@id/et_passwd"
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:layout_height="20dp" />

    <EditText
        android:id="@+id/et_username"
        android:layout_above="@id/et_passwd"
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="用户名"/>

    <EditText
        android:id="@+id/et_passwdconf"
        android:layout_below="@id/et_passwd"
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:visibility="invisible"
        android:hint="确认密码"/>

    <TextView
        android:id="@+id/blank2"
        android:layout_below="@id/et_passwdconf"
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:layout_height="20dp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_below="@id/blank1"
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="登录"
        android:background="@color/tianyi"/>

    <Button
        android:id="@+id/btn_register"
        android:layout_below="@id/blank2"
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:visibility="invisible"
        android:text="注册"
        android:background="@color/tianyi"/>

    <Button
        android:id="@+id/btn_toregister"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:visibility="visible"
        android:text="欢迎注册"
        android:background="#00000000"/>


</RelativeLayout>
